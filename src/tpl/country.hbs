{{#each this}}
  <div>
    <h2>{{name}}</h2>
    <ul>
      <li><p><b>Capital: </b>{{capital}}</p></li>
      <li><p><b>Population: </b>{{population}}</p></li>
      <li><p><b>Languages: </b><ul>{{#each languages}}<li>{{name}}</li>{{/each}}</ul></p></li>
    </ul>
    <img src={{flag}} alt='Country flag' />
  </div>
{{/each}}